# default extensions: .html .css .js .png .gif .jpg .php .php5 .py .rb .erb

# exclude files with NAMES matching this mask
config.exclusions << '~*'
# exclude files with PATHS matching this mask (if the mask contains a slash)
config.exclusions << '/node_modules/*'
# exclude all coffee-scripts (though they aren't watched anyway)
config.exclusions << '.+\.coffee'

# reload the whole page when .js changes?
config.apply_js_live = false
# reload the whole page when .css changes?
config.apply_css_live = false

# wait long enough for node-dev to restart server.js (original 50ms = 0.05)
# config.grace_period = 0.05 # the more responsive version for when node.js reload is not necessary (e.g. design work)
config.grace_period = 3.00
